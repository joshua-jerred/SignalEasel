{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang-tidy",
      "type": "shell",
      "command": "bash ./project/clang-tidy.sh",
      "detail": "Run clang-tidy on the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
      }
    },
    {
      "label": "coverage",
      "type": "shell",
      "command": "bash ./project/coverage.sh",
      "detail": "Get test coverage information from CTest",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
      }
    },
    {
      "label": "Doxygen",
      "type": "shell",
      "command": "mkdir -p build/dox && doxygen ${workspaceFolder}/project/doxygen/Doxyfile",
      "detail": "Generate Doxygen documentation for the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
      }
    }
  ]
}
